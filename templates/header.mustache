{{!
    Page header.
}}
<header id="page-header" class="row">
    <div class="col-12 pt-3 pb-3">
        <div class="card">
            <div class="card-body">
                {{#image}}
                <div class='withimage' style='background-image:url("{{{image}}}"};background-size:100% 100%'>
                {{/image}}   
                <div class="d-flex">
                    <div class="mr-auto">
                    {{{contextheader}}}
                    </div>

                    {{#settingsmenu}}
                    <div class="context-header-settings-menu">
                        {{{settingsmenu}}}
                    </div>
                    {{/settingsmenu}}
                </div>
                <div class="d-flex flex-wrap">
                    {{#hasnavbar}}
                    <div id="page-navbar">
                        {{{navbar}}}
                    </div>
                    {{/hasnavbar}}
                    <div class="ml-auto d-flex">
                        {{{pageheadingbutton}}}
                    </div>
                    <div id="course-header">
                        {{{courseheader}}}
                    </div>
                </div>
                {{#image}}
                </div>
                {{/image}}
            </div>
        </div>
    </div>
</header>
